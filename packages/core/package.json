{
  "name": "@sniptail/core",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "files": [
    "dist"
  ],
  "exports": {
    "./*": "./dist/*"
  },
  "scripts": {
    "build": "tsc -p tsconfig.build.json && node ../../scripts/copy-prompts.mjs",
    "clean": "rm -rf dist",
    "lint": "eslint . --ignore-pattern **/dist/**",
    "format": "prettier . --ignore-path ../../.prettierignore --write",
    "check": "pnpm run lint && prettier . --ignore-path ../../.prettierignore --check"
  },
  "dependencies": {
    "@openai/codex-sdk": "^0.79.0",
    "better-sqlite3": "^12.6.2",
    "bullmq": "^5.51.0",
    "classic-level": "^3.0.0",
    "drizzle-orm": "^0.45.1",
    "handlebars": "^4.7.8",
    "pino": "^10.1.0"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.13",
    "drizzle-kit": "^0.31.8"
  }
}
