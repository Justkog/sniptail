{
  "name": "@sniptail/bot",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "DOTENV_CONFIG_PATH=../../.env node --watch --watch-path=src --watch-path=../../packages/core/src --import ../../scripts/register-loaders.mjs src/index.ts",
    "build": "tsc -p tsconfig.build.json",
    "start": "DOTENV_CONFIG_PATH=../../.env node --import ../../scripts/register-loaders.mjs dist/index.js",
    "clean": "rm -rf dist tsconfig.build.tsbuildinfo",
    "lint": "eslint . --ignore-pattern **/dist/**",
    "format": "prettier . --ignore-path ../../.prettierignore --write",
    "check": "pnpm run lint && prettier . --ignore-path ../../.prettierignore --check"
  },
  "dependencies": {
    "@slack/bolt": "^4.6.0",
    "@slack/web-api": "^7.13.0",
    "@sniptail/core": "workspace:*",
    "bullmq": "^5.51.0",
    "discord.js": "^14.25.1",
    "dotenv": "^17.2.3"
  },
  "optionalDependencies": {
    "bufferutil": "^4.1.0"
  }
}
