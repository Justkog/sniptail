{
  "name": "sniptail",
  "private": true,
  "type": "module",
  "packageManager": "pnpm@10.5.0",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "pnpm -r --parallel dev",
    "test": "vitest",
    "test:run": "vitest run --config vitest.workspace.ts",
    "build": "pnpm -r build",
    "start": "pnpm -r --parallel --filter \"./apps/*\" start",
    "clean": "pnpm -r clean",
    "lint": "pnpm -r lint",
    "format": "pnpm -r format",
    "check": "pnpm -r check"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@types/node": "^25.0.3",
    "@vitest/coverage-v8": "^4.0.17",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "pino-pretty": "^13.1.3",
    "prettier": "^3.7.4",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.52.0",
    "vite-tsconfig-paths": "^4.3.2",
    "vitest": "^4.0.17"
  }
}
