{
  "name": "sniptail",
  "private": true,
  "license": "SEE LICENSE IN LICENSE",
  "licenseFile": "LICENSE",
  "type": "module",
  "packageManager": "pnpm@10.5.0",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "pnpm -r --parallel dev",
    "test": "vitest",
    "test:run": "vitest run --config vitest.workspace.ts",
    "build": "pnpm -r build",
    "smoke:bot": "SNIPTAIL_DRY_RUN=1 node --import ./scripts/register-loaders.mjs apps/bot/dist/index.js",
    "start": "pnpm -r --parallel --filter \"./apps/*\" start",
    "clean": "pnpm -r clean",
    "lint": "pnpm -r lint",
    "format": "pnpm -r format",
    "check": "pnpm -r check",
    "slack:manifest": "node scripts/generate-slack-manifest.mjs",
    "db:generate:sqlite": "pnpm --filter @sniptail/core db:generate:sqlite",
    "db:migrate:sqlite": "pnpm --filter @sniptail/core db:migrate:sqlite",
    "db:generate:pg": "pnpm --filter @sniptail/core db:generate:pg",
    "db:migrate:pg": "pnpm --filter @sniptail/core db:migrate:pg"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@types/node": "^25.0.3",
    "@vitest/coverage-v8": "^4.0.17",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "prettier": "^3.7.4",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.52.0",
    "vite-tsconfig-paths": "^4.3.2",
    "vitest": "^4.0.17"
  }
}
